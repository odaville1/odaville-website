{
  "version": 2,
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "outputDirectory": "frontend",
  "functions": {
    "api/*.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "headers": [
    {
      "source": "**/*.mov",
      "headers": [
        { "key": "Content-Type", "value": "video/quicktime" }
      ]
    },
    {
      "source": "**/*.mp4",
      "headers": [
        { "key": "Content-Type", "value": "video/mp4" }
      ]
    },
    {
      "source": "**/*.webm",
      "headers": [
        { "key": "Content-Type", "value": "video/webm" }
      ]
    }
  ],
  "routes": [
    {
      "src": "/api/test",
      "dest": "/api/test.js"
    },
    {
      "src": "/api/debug",
      "dest": "/api/debug.js"
    },
    {
      "src": "/api/auth/login",
      "dest": "/api/auth.js"
    },
    {
      "src": "/api/auth/verify",
      "dest": "/api/verify.js"
    },
    {
      "src": "/api/blog",
      "dest": "/api/blog.js"
    },
    {
      "src": "/api/gallery",
      "dest": "/api/gallery.js"
    },
    {
      "src": "/api/products",
      "dest": "/api/products.js"
    },
    {
      "src": "/api/diagnostic",
      "dest": "/api/diagnostic.js"
    },
    {
      "src": "/api/verify-domain",
      "dest": "/api/verify-domain.js"
    },
    {
      "src": "/brochures/(.*)",
      "dest": "/brochures/$1"
    },
    {
      "src": "/videos/(.*)",
      "dest": "/videos/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "has": [
        {
          "type": "host",
          "value": "admin.odaville.com"
        }
      ],
      "dest": "/admin/admin-login.html"
    },
    {
      "src": "/admin/(.*).html",
      "dest": "/admin/$1.html"
    },
    {
      "src": "/admin/(.*)",
      "dest": "/admin/$1"
    },
    {
      "src": "/(.*)\\.html",
      "dest": "/$1.html"
    },
    {
      "src": "/(.*)\\.(js|css|jpg|jpeg|png|gif|svg|ico|webp|ttf|woff|woff2|otf|mp4|mov|webm|mp3|avi)",
      "dest": "/$1.$2"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}